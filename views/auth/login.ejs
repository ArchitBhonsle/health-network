<%- include("../partials/top.ejs") %>

        <link rel="stylesheet" type="text/css" href="/css/login.css">
        <title>Login</title>
    </head>
    <body>
        <%- include("../partials/firebase.ejs") %>
        
        <div class="container">
            <div class="login">
                <h1>Login</h1>
                <br>
                <div class="login-button">
                <button id="google-login" type="button" class="btn btn-primary"><i class="fab fa-google"></i> Login with Google</button>
                </div>
                <hr>
                <form>
                    <div class="form-group">
                    <label for="email-input">Email address</label>
                    <input type="email" class="form-control" id="email-input" placeholder="Enter email">
                    </div>
                    <div class="form-group">
                    <label for="pass-input">Password</label>
                    <input type="password" class="form-control" id="pass-word" placeholder="Password">
                    </div>
                    <button id="email-login" type="button" class="btn btn-secondary"><i class="fas fa-envelope"></i> Login with Email</button>
                </form>
            </div>
        </div>

        <script src="/js/login.js"></script>

